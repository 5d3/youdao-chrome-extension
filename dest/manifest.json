{
    "manifest_version": 2,

    "name": "有道划词查询",
    "version": "1.0.0",
    "description": "基于有道的划词查询小插件，看英文文档必备",
    "icons": {
        "16": "handian16.png",
        "48": "handian48.png",
        "128": "handian128.png"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "css": ["show.css"],
        "js": ["show.js"],
        "run_at": "document_end"
    }],
    "permissions": [
        "https://*.youdao.com/",
        "storage"
    ],
    "browser_action": {
        "default_icon": "handian48.png",
        "default_title": "有道划词翻译工具",
        "default_popup": "popup.html"
    }
}
